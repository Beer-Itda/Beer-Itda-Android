<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BeerItdaTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/butterscotch</item>
        <item name="android:textColorPrimary">@color/backgroundReversalTint</item>
        <item name="android:textColor">@color/backgroundReversalTint</item>
        <item name="fontFamily">@font/notosans_kr_medium</item>
        <item name="colorPrimaryDark">@color/backgroundTint</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowBackground">@color/backgroundTint</item>
        <item name="android:navigationBarColor">@color/backgroundTint</item>
        <item name="materialAlertDialogTheme">@style/MyAlertDialogStyle</item>
    </style>

    <style name="LargeRatingBar" parent="android:style/Widget.Material.RatingBar">
        <item name="android:colorControlActivated">@color/butterscotch</item>
        <item name="android:colorControlNormal">@color/circleChipBackgroundColor</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_dialog_round_20</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:navigationBarColor">@color/subBackgroundTint</item>
        <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="MyAlertDialogStyle" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">@color/subBackgroundTint</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Negative</item>
    </style>

    <style name="TitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/backgroundReversalTint</item>
        <item name="fontFamily">@font/notosans_kr_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/backgroundReversalTint</item>
        <item name="fontFamily">@font/notosans_kr_regular</item>
    </style>

    <!--삭제확인 다이얼로그 테마-->
    <style name="Dialog" parent="Theme.MaterialComponents.Light.Dialog.Alert.Bridge">
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Negative</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/ripple</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/notosans_kr_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/butterscotch</item>
    </style>

    <style name="Alert.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/ripple</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/notosans_kr_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/butterscotch</item>
    </style>

    <style name="Filter.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/color_1c1b21</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/filter_select_change</item>
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="chipStartPadding">0dp</item>
        <item name="chipEndPadding">0dp</item>
        <item name="chipMinHeight">0dp</item>
        <item name="textStartPadding">0dp</item>
        <item name="textEndPadding">0dp</item>
    </style>

    <style name="Home.Filter.Chip" parent="Base.Widget.MaterialComponents.Chip">
        <item name="chipBackgroundColor">?attr/colorPrimaryDark</item>
        <item name="closeIcon">@drawable/ic_chip_cancel_24</item>
        <item name="closeIconTint">@color/color_d3d3d3</item>
        <item name="chipStartPadding">0dp</item>
        <item name="chipEndPadding">0dp</item>
        <item name="textStartPadding">0dp</item>
        <item name="textEndPadding">0dp</item>
        <item name="closeIconStartPadding">12dp</item>
        <item name="closeIconEndPadding">0dp</item>

    </style>

    <style name="Home.Item.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipSurfaceColor">@color/white</item>
        <item name="chipStartPadding">8dp</item>
        <item name="chipEndPadding">8dp</item>
        <item name="chipMinHeight">20dp</item>
        <item name="textStartPadding">0dp</item>
        <item name="textEndPadding">0dp</item>
        <item name="chipCornerRadius">14.5dp</item>
    </style>

    <style name="TextAppearance.Filter.Common" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/notosans_kr_bold</item>
    </style>

    <style name="TextAppearance.Filter.Aroma" parent="TextAppearance.Filter.Common">
        <item name="android:textAllCaps">true</item>
    </style>

</resources>