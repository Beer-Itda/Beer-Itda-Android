<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
<!--        <item name="colorPrimary">@color/colorPrimary</item>-->
<!--        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
<!--        <item name="colorAccent">@color/colorAccent</item>-->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="DarkTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/butterscotch</item>
        <item name="android:textColorPrimary">@color/butterscotch</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimaryDark">@color/color_1c1b21</item>
        <item name="android:windowBackground">@color/color_1c1b21</item>
        <item name="android:navigationBarColor">@color/color_1c1b21</item>
    </style>


    <style name="TextBoldButterscotch12">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/butterscotch</item>
    </style>

    <style name="TextBoldButterscotch14">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/butterscotch</item>
    </style>

    <style name="RatingBar" parent="Theme.MaterialComponents">
        <item name="colorControlActivated">@color/butterscotch</item>
        <item name="colorControlNormal">@android:color/holo_green_light</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_dialog_round_20</item>
    </style>
    
    <style name="BottomSheetDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <!--삭제확인 다이얼로그 테마-->
    <style name="Dialog" parent="Theme.MaterialComponents.Dialog.Alert.Bridge">
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Negative</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/butterscotch</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Alert.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/butterscotch</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>