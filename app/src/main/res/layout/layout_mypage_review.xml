<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="level"
            type="Integer" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_1c1b21_round_10"
        android:padding="16dp">


        <ImageView
            android:id="@+id/iv_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:background="@drawable/circle_24"
            android:backgroundTint="@color/butterscotch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="보리"
            android:textColor="@color/butterscotch"
            android:textSize="@dimen/textSize_14"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/iv_level"
            app:layout_constraintStart_toEndOf="@id/iv_level"
            app:layout_constraintTop_toTopOf="@id/iv_level"
            tools:text="보리" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/my_write_review"
            android:textSize="@dimen/textSize_14"
            app:layout_constraintStart_toStartOf="@id/iv_level"
            app:layout_constraintTop_toBottomOf="@id/tv_level" />

        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@{@string/user_level(level,5)}"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_14"
            app:layout_constraintBottom_toBottomOf="@+id/tv_title"
            app:layout_constraintStart_toEndOf="@id/tv_title"
            app:layout_constraintTop_toTopOf="@+id/tv_title"
            tools:ignore="SmallSp"
            tools:text="(4/5)" />

        <!--        <ImageView-->
        <!--            android:id="@+id/iv_more_detail"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:src="@drawable/ic_btn_more"-->
        <!--            app:layout_constraintBottom_toBottomOf="@+id/tv_title"-->
        <!--            app:layout_constraintEnd_toEndOf="parent"-->
        <!--            app:layout_constraintTop_toTopOf="@+id/tv_title" />-->

        <ProgressBar
            android:id="@+id/progress"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="12dp"
            android:max="5"
            android:progress="@{level}"
            android:progressDrawable="@drawable/progress_bar_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            tools:progress="4" />

        <TextView
            android:id="@+id/tv_more_level_step_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="보리"
            android:textColor="@color/color_8e8d94"
            android:textSize="@dimen/textSize_12"
            app:layout_constraintStart_toStartOf="@+id/progress"
            app:layout_constraintTop_toBottomOf="@id/progress" />

        <TextView
            android:id="@+id/tv_more_level_step_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="맥린이"
            android:textColor="@color/butterscotch"
            android:textSize="@dimen/textSize_12"
            app:layout_constraintEnd_toEndOf="@+id/progress"
            app:layout_constraintTop_toBottomOf="@id/progress" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
